{
  "formName": "Electrical SF Inspection",
  "sections": [
    {
      "title": "Homeowner Information",
      "fields": [
        {
          "id": "homeownerName",
          "label": "Homeowner Name",
          "type": "text",
          "required": true,
          "externalID": "homeowner.name",
          "placeholder": "Enter homeowner name",
          "validationRules": [
            {
              "type": "minLength",
              "value": 2,
              "message": "Homeowner name must be at least 2 characters"
            }
          ]
        },
        {
          "id": "homeownerPhone",
          "label": "Homeowner Phone",
          "type": "text",
          "required": true,
          "externalID": "homeowner.phone",
          "placeholder": "e.g., (555) 555-1234"
        },
        {
          "id": "homeownerEmail",
          "label": "Homeowner Email",
          "type": "text",
          "required": true,
          "externalID": "homeowner.email",
          "placeholder": "e.g., name@example.com",
          "validationRules": [
            {
              "type": "pattern",
              "value": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
              "message": "Enter a valid email address"
            }
          ]
        },
        {
          "id": "homeownerAddress",
          "label": "Street Address",
          "type": "text",
          "required": true,
          "externalID": "homeowner.address",
          "placeholder": "Street address",
          "validationRules": [
            {
              "type": "minLength",
              "value": 5,
              "message": "Address must be at least 5 characters"
            }
          ]
        }
        ,
        {
          "id": "homeownerCity",
          "label": "City",
          "type": "text",
          "required": true,
          "externalID": "homeowner.city",
          "placeholder": "City",
          "validationRules": [
            {
              "type": "minLength",
              "value": 2,
              "message": "City must be at least 2 characters"
            }
          ]
        },
        {
          "id": "homeownerState",
          "label": "State",
          "type": "select",
          "required": true,
          "externalID": "homeowner.state",
          "options": [
            { "label": "Alabama", "value": "AL" },
            { "label": "Alaska", "value": "AK" },
            { "label": "Arizona", "value": "AZ" },
            { "label": "Arkansas", "value": "AR" },
            { "label": "California", "value": "CA" },
            { "label": "Colorado", "value": "CO" },
            { "label": "Connecticut", "value": "CT" },
            { "label": "Delaware", "value": "DE" },
            { "label": "District of Columbia", "value": "DC" },
            { "label": "Florida", "value": "FL" },
            { "label": "Georgia", "value": "GA" },
            { "label": "Hawaii", "value": "HI" },
            { "label": "Idaho", "value": "ID" },
            { "label": "Illinois", "value": "IL" },
            { "label": "Indiana", "value": "IN" },
            { "label": "Iowa", "value": "IA" },
            { "label": "Kansas", "value": "KS" },
            { "label": "Kentucky", "value": "KY" },
            { "label": "Louisiana", "value": "LA" },
            { "label": "Maine", "value": "ME" },
            { "label": "Maryland", "value": "MD" },
            { "label": "Massachusetts", "value": "MA" },
            { "label": "Michigan", "value": "MI" },
            { "label": "Minnesota", "value": "MN" },
            { "label": "Mississippi", "value": "MS" },
            { "label": "Missouri", "value": "MO" },
            { "label": "Montana", "value": "MT" },
            { "label": "Nebraska", "value": "NE" },
            { "label": "Nevada", "value": "NV" },
            { "label": "New Hampshire", "value": "NH" },
            { "label": "New Jersey", "value": "NJ" },
            { "label": "New Mexico", "value": "NM" },
            { "label": "New York", "value": "NY" },
            { "label": "North Carolina", "value": "NC" },
            { "label": "North Dakota", "value": "ND" },
            { "label": "Ohio", "value": "OH" },
            { "label": "Oklahoma", "value": "OK" },
            { "label": "Oregon", "value": "OR" },
            { "label": "Pennsylvania", "value": "PA" },
            { "label": "Rhode Island", "value": "RI" },
            { "label": "South Carolina", "value": "SC" },
            { "label": "South Dakota", "value": "SD" },
            { "label": "Tennessee", "value": "TN" },
            { "label": "Texas", "value": "TX" },
            { "label": "Utah", "value": "UT" },
            { "label": "Vermont", "value": "VT" },
            { "label": "Virginia", "value": "VA" },
            { "label": "Washington", "value": "WA" },
            { "label": "West Virginia", "value": "WV" },
            { "label": "Wisconsin", "value": "WI" },
            { "label": "Wyoming", "value": "WY" }
          ]
        },
        {
          "id": "homeownerZip",
          "label": "ZIP Code",
          "type": "text",
          "required": true,
          "externalID": "homeowner.zip",
          "placeholder": "e.g., 12345",
          "validationRules": [
            {
              "type": "pattern",
              "value": "^\\d{5}$",
              "message": "ZIP code must be 5 digits"
            }
          ]
        }
      ]
    },
    {
      "title": "Panel Information",
      "fields": [
        {
          "id": "panelLocation",
          "label": "Panel Location",
          "type": "text",
          "required": true,
          "externalID": "electrical.panelLocation",
          "placeholder": "Enter panel location",
          "validationRules": [
            {
              "type": "minLength",
              "value": 3,
              "message": "Panel location must be at least 3 characters"
            }
          ]
        },
        {
          "id": "panelModel",
          "label": "Panel Model",
          "type": "text",
          "required": false,
          "externalID": "electrical.panelModel",
          "placeholder": "e.g., Square D QO"
        },
        {
          "id": "amperage",
          "label": "Amperage",
          "type": "number",
          "required": true,
          "externalID": "electrical.amperage",
          "placeholder": "e.g., 200",
          "validationRules": [
            {
              "type": "min",
              "value": 15,
              "message": "Amperage must be at least 15"
            },
            {
              "type": "max",
              "value": 400,
              "message": "Amperage cannot exceed 400"
            }
          ]
        }
      ]
    },
    {
      "title": "Inspection Details",
      "fields": [
        {
          "id": "breakersChecked",
          "label": "All Breakers Checked",
          "type": "checkbox",
          "required": false,
          "externalID": "electrical.breakersChecked"
        },
        {
          "id": "groundingChecked",
          "label": "Grounding Verified",
          "type": "checkbox",
          "required": false,
          "externalID": "electrical.groundingChecked"
        },
        {
          "id": "panelCondition",
          "label": "Panel Condition",
          "type": "radio",
          "required": true,
          "externalID": "electrical.panelCondition",
          "options": [
            { "label": "Excellent", "value": "excellent" },
            { "label": "Good", "value": "good" },
            { "label": "Fair", "value": "fair" },
            { "label": "Poor", "value": "poor" }
          ]
        },
        {
          "id": "issues",
          "label": "Issues Found",
          "type": "multiselect",
          "required": false,
          "externalID": "electrical.issues",
          "options": [
            { "label": "Loose Connections", "value": "loose_connections" },
            { "label": "Corrosion", "value": "corrosion" },
            { "label": "Double Tapped Breakers", "value": "double_tapped" },
            { "label": "Missing Knockouts", "value": "missing_knockouts" },
            { "label": "No Issues", "value": "no_issues" }
          ]
        },
        {
          "id": "issueDetails",
          "label": "Issue Details",
          "type": "textarea",
          "required": false,
          "externalID": "electrical.issueDetails",
          "placeholder": "Describe the issues found",
          "visibleWhen": [
            {
              "fieldId": "issues",
              "value": "loose_connections",
              "operator": "contains"
            }
          ]
        },
        {
          "id": "notes",
          "label": "Inspection Notes",
          "type": "textarea",
          "required": false,
          "externalID": "electrical.notes",
          "placeholder": "Additional observations and notes"
        },
        {
          "id": "inspectionPhotos",
          "label": "Inspection Photos",
          "type": "file",
          "required": false,
          "externalID": "electrical.inspectionPhotos",
          "accept": "image/*",
          "multiple": true
        },
        {
          "id": "inspectorSignature",
          "label": "Inspector Signature",
          "type": "signature",
          "required": true,
          "externalID": "electrical.inspectorSignature"
        }
      ]
    }
  ]
}
